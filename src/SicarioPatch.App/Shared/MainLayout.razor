@using Blazorise.Icons.Material
@inherits LayoutComponentBase
@inject BrandProvider Brand
@inject IConfiguration Config

<Layout Sider="true">
    <LayoutSider>
        <LayoutSiderContent>
            <Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
                 Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
                <BarToggler />
                <BarBrand>
                    <BarItem>
                        <BarLink To="">
                            <BarIcon IconName="MaterialIcons.Layers" />
                            @Brand.ProjectName
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarMenu>
                    <BarStart>
                        <BarItem>
                            <BarLink To="build">
                                <BarIcon IconName="IconName.Code"/>
                                @Brand.AppName
                            </BarLink>
                        </BarItem>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    <BarIcon IconName="MaterialIcons.MergeType"/>
                                    @Brand.ToolName
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem To="/merger">
                                        About the @Brand.ToolName
                                    </BarDropdownItem>
                                    <BarDropdownItem To="/merger-start">
                                        Get started with @Brand.ToolName(NameFormat.Short)
                                    </BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                        <AuthorizeView>
                            <AuthorMenu/>
                        </AuthorizeView>
                    </BarStart>
                    <BarEnd>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    <BarIcon IconName="IconName.Info" />
                                    About
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem To="/about">
                                        About @Brand.ProjectName
                                    </BarDropdownItem>
                                    <BarDropdownItem To="/faq">
                                        FAQ
                                    </BarDropdownItem>
                                    @if (Config.GetDocsPath(out var docsPath))
                                    {
                                        <BarDropdownItem To="@docsPath">
                                            Documentation
                                        </BarDropdownItem>
                                    }
                                    <BarDropdownItem To="https://www.humblegames.com/games/projectwingman/" Target="Target.Blank">
                                        Project Wingman
                                    </BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                        <BarItem>
                            <BarLoginDisplay />
                        </BarItem>
                    </BarEnd>
                </BarMenu>
            </Bar>
        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutHeader Fixed="true">
            @*<Bar Breakpoint="Breakpoint.Desktop" Background="Background.Primary" ThemeContrast="ThemeContrast.Dark">
                <BarBrand>
                    <BarItem>
                        <BarLink To="">
                            
                        </BarLink>
                    </BarItem>
                </BarBrand>
            </Bar>*@
        </LayoutHeader>
        <LayoutContent Padding="Padding.Is4.OnAll">
            <CascadingValue Value="@_snackbar" Name="SnackbarStack">
                @Body
                <SnackbarStack @ref="_snackbar" Interval="2000" Location="SnackbarStackLocation.Left"/>
            </CascadingValue>
        </LayoutContent>
    </Layout>
</Layout>

@code {
    SnackbarStack _snackbar;

}